<table class="table table-hover">
  <thead>
    <h2>アプライ一覧</h2>
  </thead>
  <tbody>
    <% @applies.each do |apply| %>
    <tr>
      <td>
        <%= link_to apply.post.title, apply_apply_messages_path(apply)%>
      </td>
      <td>
        <%= link_to apply.post.company.name, company_path(apply.post.company_id)%>
      </td>
      <td>
        <%= link_to "Message", apply_apply_messages_path(apply.id)%>  
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
