<div class="container">
  <div class="card mb-3">
    <div class="card-header">
      <div class="row">
        <div class="col">
          Company Profile
        </div>
        <div class="col text-right">
          <%= link_to 'preview', company_path, class: "btn btn-primary btn-sm" %>
          <%= link_to 'edit', edit_company_path, class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
    <div class="row no-gutters">
      <div class="col-md-2">
        <div class="">
          <%= image_tag @company.logo.url, class: 'img-thumbnail d-block mx-auto m-4' if @company.logo.present? %>
          <%= image_tag("default_image.jpeg", class: 'img-thumbnail d-block mx-auto m-4') unless @company.logo.present? %>
        </div>
        <div class="pl-3">
          <h6 class="card-title"><%= @company.name %></h6>
          <p><%= @company.email %></p>

        </div>
      </div>
      <div class="col-md-10">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <p class="card-text">
                    <%= @company.location %>
                    Phone: <%= @company.phone_number %>
                    Incorporation:<%= @company.date_of_incorporation.strftime("%b, %Y") if @company.date_of_incorporation %>
                    No. of Employees:<%= @company.number_of_employees %>

                  </p>
                </div>
              </div>
              <br>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <p class="card-text">
                    Adress:<%= @company.address %>
                    Paid up capital: <%= @company.paid_up_capital %>
                    Membership: <%= @company.member_status %>
                  </p>
                </div>
              </div>

            </div>
          </div>
          <div class="row">
            <p>Description</p>
            <p class="card-text"><%= @company.description %></p>

            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <table class="table table-bordered table-hover">
    <h4>List of Posts</h4>
    <thead class="thead-dark">

    <tr>
      <th>#</th>
      <th>title</th>
      <th>position</th>
      <th>status</th>
      <th>No. of Applications</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <% @company.posts.each_with_index do |post,i| %>
    <tr>
      <td>
        <%= i + 1 %>
      </td>
      <td>
        <%= link_to "#{post.title}", post_path(post.id) %>
      </td>
      <td>
        <%= post.position %>
      </td>
      <td>
        <%= post.status %>
      </td>
      <td>
        <%= post.applies.count %>
      </td>
      <td>
        <%= link_to "edit", edit_post_path(post.id) %>
      </td>
      <td>
        <%= link_to "Manage", manage_post_path(post.id) %>
      </td>
      <td>
        <%= link_to "delete", post_path(post.id), method: :delete, data:{ confirm: "Are you sure?"} %>
      </td>
    </tr>
    <% end %>
  </table>
  <table class="table table-bordered table-hover">
    <h4>Scouted Users</h4>
    <thead class="thead-dark">
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Last_company</th>
      <th>Position</th>
      <th>Expected Salary</th>
      <th>Education School</th>
      <th>Education Major</th>
      <th></th>
    </tr>
  </thead>
    <% @company.scouts.each_with_index do |scout,i| %>
      <% user = scout.user %>
    <tr>
      <th><%= i + 1 %></th>
      <td><%= link_to user.first_name, user_path(user.id) %></td>
      <td><%= user.gender %></td>
      <td><%= user.age %></td>
      <td><%= user.work_experiences.last.company %></td>
      <td><%= user.work_experiences.last.position %></td>
      <td><%= user.expected_salary %></td>
      <td><%= user.educations.last.school_name %></td>
      <td><%= user.educations.last.major %></td>
      <td><%= link_to(scout_scout_messages_path(scout.id)) do %>
        <button type="button" class = "btn btn-primary">
          <span>
          <span class="small">Message</span><span class="badge badge-light"><%= scout.scout_messages.where(read: false, user_id: user.id).count %></span>
          </span>
        </button>
        <% end %>
      </td>
    </tr>

    <% end %>
  </table>
</div>

<%= link_to "new post", new_post_path %>


