<fieldset>
  <h3>Education<span class="users_child_index"><%= f.index + 1 %><span></h3>
  <%= f.label :school_name %>
  <%= f.text_field :school_name %>
  <%= f.label :major %>
  <%= f.text_field :major %>
  <%= f.label :period_start %>
  <%= f.datetime_select :period_start,
  {
    include_blank: true,
    default: nil,
    start_year: 1970,
    end_year: 2020,
    discard_day: true,
    discard_hour: true} %>
  <%= f.label :period_end %>
  <%= f.datetime_select :period_end,
   {
    include_blank: true,
    default: nil,
    start_year: 1970,
    end_year: 2020,
    discard_day: true,
    discard_hour: true} %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "削除", '#', class: "remove_fields" %>
</fieldset>
