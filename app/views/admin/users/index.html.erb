<div class="container-fluid">
      <%= paginate @users %>
    <table class="table table-bordered">
      <h5>Users</h5>
      <thead class="thead-dark">
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Status</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Last Update</th>
        <th>Created At</th>
        <th colspan="2">Action</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.first_name, user_path(user.id) %></td>
          <td><%= link_to user.last_name, user_path(user.id) %></td>
          <td><%= user.age %></td>
          <td><%= user.gender %></td>
          <td><%= user.status %></td>
          <td><%= user.email %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.updated_at %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to "Edit", edit_user_path(user.id) %></td>
          <td><%= link_to "Delete", admin_user_path(user.id), method: :delete, data:{ confirm: "Are you sure?"} %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>

</div>
